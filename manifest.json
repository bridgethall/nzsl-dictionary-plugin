{
  "name": "NZSL Dictionary Autoplayer",
  "description": "Automatically plays sign videos for words on the NZSL Dictionary sign definition pages",
  "version": "1.1",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon@16px.png",
    "32": "images/icon@32px.png",
    "48": "images/icon@48px.png",
    "128": "images/icon@128px.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nzsl.nz/signs/*"],
      "js": ["sign_autoplay.js"]
    }
  ]
}
